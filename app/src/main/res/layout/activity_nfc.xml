<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ar.com.sifir.alaburapp.NFCActivity">

    <LinearLayout
        android:id="@+id/container_keys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_key_1"
            style="@style/KeyEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="text" />

        <EditText
            android:id="@+id/text_key_2"
            style="@style/KeyEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="text" />

        <EditText
            android:id="@+id/text_key_3"
            style="@style/KeyEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="text" />

        <EditText
            android:id="@+id/text_key_4"
            style="@style/KeyEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="text" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/container_keys"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Pase su smart phone por el NFC"
        android:textSize="18sp" />

</RelativeLayout>